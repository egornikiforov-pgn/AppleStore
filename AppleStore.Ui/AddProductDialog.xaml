<Window x:Class="AppleStore.Ui.AddProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Product" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="ProductNameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Price:"/>
            <TextBox x:Name="ProductPriceTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Image Path:"/>
            <TextBox x:Name="ProductImagePathTextBox" Margin="0,0,0,10"/>
            <Button x:Name="Add" Content="Add" Width="100" HorizontalAlignment="Center" Margin="10" Click="AddButton_Click"/>
        </StackPanel>
    </Grid>
</Window>